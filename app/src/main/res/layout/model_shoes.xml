<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/mimagem"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/vasco" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:text="Camisa do Vasco"
            android:textSize="22sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/mrtbar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:numStars="5"
            android:rating="3"/>

        <TextView
            android:id="@+id/mpreco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="R$ 259,99"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/mdesc"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="arial"
            android:text="Vamos juntos empurrar o Vascão a escrever um novo capítulo em sua história"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mfav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_baseline_favorite" />

            <Button
                android:id="@+id/mbtncomprar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="comprar"
                android:textSize="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"/>


        </LinearLayout>



    </LinearLayout>



</LinearLayout>